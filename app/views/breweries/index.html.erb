<h1 class="text-center">Brewery List</h1>

<div class="text-center padded">
  <%= link_to "Add a brewery", new_brewery_path, class: "btn btn-primary" %>
</div>

<div class="container">
  <div class="row">
    <% @breweries.each do |brewery| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card text-center">
          <div class="card-body">
            <%= link_to brewery.name, brewery_path(brewery) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


